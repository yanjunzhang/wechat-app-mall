@keyframes kf-marque-animation {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-289%);
  }
}
.header {
  width: 100%;
  position: relative;
  background: #69c3aa; /**/
  color: #000;
  transition: all 0.6s ease-in-out;
}
.header .line {
  clear: both;
  width: 100%;
  height: 1px;
  border-bottom: 1px dashed #000;
}
.header .marquee {
  position: relative;
  width: 100%;
  height: 69rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  line-height: 40rpx;
  background: #feb70f;
  border: none;
  font-size: 28rpx;
  text-overflow: clip;
}

.header .marquee .desc {
  position: relative;
  display: inline-block;
  height: 40rpx;
  width: 50%;
  line-height: 40rpx;
  padding-top: 20rpx;
  padding-right: 0rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
  animation: kf-marque-animation 5s linear infinite;
  white-space: nowrap;
}